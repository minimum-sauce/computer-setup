# ls command 
alias ll='ls -la --color=always'
alias la='ls -a --color=always'
alias l='ls -l --color=always'

# jump shortcuts
alias pe='cd ~/Documents/personal/'
alias wk='cd ~/Documents/work/'
alias y2='cd ~/Documents/school/year2'
alias y3='cd ~/Documents/school/year3'

# nvim shortcuts
alias v='nvim'
alias nrc='nvim ~/.config/nvim/'
alias zrc='nvim $HOME/.zshrc'
alias myzsh='nvim $ZSH'
alias zsource='source $HOME/.zshrc'

# Python 
alias python='python3'
